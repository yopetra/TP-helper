<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="item_of_card">

        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation_of_card</item>
    </style>

    <style name="settings_buttons_numbers">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundColor">@color/white_grey</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="settings_buttons_colors">
        <item name="android:layout_width">@dimen/settings_button_width</item>
        <item name="android:layout_height">@dimen/settings_button_height</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="text_settings">
        <item name="android:textSize">24sp</item>
    </style>

</resources>